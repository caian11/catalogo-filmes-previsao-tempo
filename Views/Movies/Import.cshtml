@model ImportMovieViewModel

@{
    ViewData["Title"] = "Importar filme";

    string posterUrl = null;
    if (!string.IsNullOrEmpty(Model?.PosterPath))
    {
        posterUrl = "https://image.tmdb.org/t/p/w342" + Model.PosterPath;
    }
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-1">Importar filme</h1>
        <p class="text-muted small mb-0">Revise os dados trazidos do TMDb antes de salvar.</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-md-4">
        @if (!string.IsNullOrEmpty(posterUrl))
        {
            <div class="mb-3">
                <img src="@posterUrl"
                     alt="@Model.Titulo"
                     class="img-fluid rounded-3 shadow-sm w-100"
                     style="max-height: 360px; object-fit: cover;" />
            </div>
        }

        <div class="small text-muted">
            <div class="mb-1">
                <span class="fw-semibold">TMDb ID:</span> @Model.TmdbId
            </div>
            @if (!string.IsNullOrEmpty(Model.Lingua))
            {
                <div class="mb-1">
                    <span class="fw-semibold">Língua:</span> @Model.Lingua
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Genero))
            {
                <div class="mb-1">
                    <span class="fw-semibold">Gênero:</span> @Model.Genero
                </div>
            }
        </div>
    </div>

    <div class="col-12 col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="Import" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="TmdbId" />
                    <input type="hidden" asp-for="PosterPath" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="Titulo" class="form-label small"></label>
                            <input asp-for="Titulo" class="form-control form-control-sm" />
                            <span asp-validation-for="Titulo" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="TituloOriginal" class="form-label small"></label>
                            <input asp-for="TituloOriginal" class="form-control form-control-sm" />
                        </div>

                        <div class="col-12">
                            <label asp-for="Sinopse" class="form-label small"></label>
                            <textarea asp-for="Sinopse"
                                      class="form-control form-control-sm"
                                      rows="4"></textarea>
                        </div>

                        <div class="col-12 col-md-4">
                            <label asp-for="DataLancamento" class="form-label small"></label>
                            <input asp-for="DataLancamento"
                                   type="date"
                                   class="form-control form-control-sm" />
                        </div>

                        <div class="col-12 col-md-4">
                            <label asp-for="Duracao" class="form-label small"></label>
                            <div class="input-group input-group-sm">
                                <input asp-for="Duracao"
                                       type="number"
                                       class="form-control" />
                                <span class="input-group-text">min</span>
                            </div>
                        </div>

                        <div class="col-12 col-md-4">
                            <label asp-for="NotaMedia" class="form-label small"></label>
                            <input asp-for="NotaMedia"
                                   type="text"
                                   class="form-control form-control-sm" />
                            <span asp-validation-for="NotaMedia" class="text-danger small"></span>
                        </div>


                        <div class="col-12 col-md-6">
                            <label asp-for="Genero" class="form-label small"></label>
                            <input asp-for="Genero" class="form-control form-control-sm" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Lingua" class="form-label small"></label>
                            <input asp-for="Lingua" class="form-control form-control-sm" />
                        </div>

                        <div class="col-12">
                            <label asp-for="ElencoPrincipal" class="form-label small"></label>
                            <textarea asp-for="ElencoPrincipal"
                                      class="form-control form-control-sm"
                                      rows="3"></textarea>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h2 class="h6 mb-2">Localização</h2>
                    <p class="text-muted small mb-3">
                        Preencha se o TMDb não fornecer uma cidade de referência.
                    </p>

                    <div class="row g-3">
                        <div class="col-12">
                            <label asp-for="CidadeReferencia" class="form-label small"></label>
                            <input asp-for="CidadeReferencia" class="form-control form-control-sm" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Latitude" class="form-label small"></label>
                            <input asp-for="Latitude"
                                   type="number"
                                   step="0.000001"
                                   class="form-control form-control-sm" />
                            <span asp-validation-for="Latitude" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="Longitude" class="form-label small"></label>
                            <input asp-for="Longitude"
                                   type="number"
                                   step="0.000001"
                                   class="form-control form-control-sm" />
                            <span asp-validation-for="Longitude" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Search"
                           class="btn btn-outline-secondary btn-sm">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary btn-sm">
                            Salvar filme
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
    jQuery.validator.methods.number = function (value, element) {
        return this.optional(element) || true;
    };
    </script>
}
