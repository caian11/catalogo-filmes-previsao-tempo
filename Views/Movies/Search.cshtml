@model MovieSearchViewModel

@{
    ViewData["Title"] = "Buscar filmes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-1">Buscar filmes no TMDb</h1>
        <p class="text-muted small mb-0">Digite o nome do filme para pesquisar na base do TMDb.</p>
    </div>
</div>

<form method="get" asp-action="Search" class="mb-4">
    <div class="row g-2 align-items-center">
        <div class="col-12 col-md-9">
            <div class="input-group">
                <input type="text"
                       name="query"
                       value="@Model.Query"
                       class="form-control"
                       placeholder="Nome do filme" />
            </div>
        </div>
        <div class="col-12 col-md-3">
            <button type="submit" class="btn btn-primary w-100">
                Buscar
            </button>
        </div>
    </div>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Query) && (Model.Results == null || !Model.Results.Any()))
{
    <div class="alert alert-warning small" role="alert">
        Nenhum resultado encontrado para <strong>@Model.Query</strong>.
    </div>
}

@if (Model.Results != null && Model.Results.Any())
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted small mb-0">
            Página @Model.Page de @Model.TotalPages –
            @Model.Results.Count() resultado(s) nesta página.
        </p>
    </div>

    <div class="row g-3">
        @foreach (var item in Model.Results)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <article class="card h-100 border-0 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.PosterUrl))
                    {
                        <img src="@item.PosterUrl"
                             alt="@item.Titulo"
                             class="card-img-top"
                             style="height:260px; object-fit:cover;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h2 class="h6 card-title mb-1 text-truncate" title="@item.Titulo">
                            @item.Titulo
                        </h2>

                        <p class="card-subtitle text-muted small mb-2">
                            Lançamento: @(item.DataLancamento?.ToString("dd/MM/yyyy") ?? "Sem data")
                        </p>

                        @if (!string.IsNullOrWhiteSpace(item.Sinopse))
                        {
                            <p class="card-text small text-muted mb-3"
                               style="max-height: 5.5rem; overflow: hidden; text-overflow: ellipsis;">
                                @item.Sinopse
                            </p>
                        }

                        <div class="mt-auto d-flex flex-wrap gap-2">
                            <a class="btn btn-outline-secondary btn-sm"
                               asp-action="Details"
                               asp-route-tmdbId="@item.TmdbId">
                                Detalhes (TMDb)
                            </a>
                            <a class="btn btn-primary btn-sm"
                               asp-action="Import"
                               asp-route-tmdbId="@item.TmdbId">
                                Importar
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4" aria-label="Paginação de resultados">
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Search"
                       asp-route-query="@Model.Query"
                       asp-route-page="@(Model.Page - 1)">
                        Anterior
                    </a>
                </li>

                <li class="page-item disabled">
                    <span class="page-link">
                        Página @Model.Page de @Model.TotalPages
                    </span>
                </li>

                <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Search"
                       asp-route-query="@Model.Query"
                       asp-route-page="@(Model.Page + 1)">
                        Próxima
                    </a>
                </li>
            </ul>
        </nav>
    }
}
