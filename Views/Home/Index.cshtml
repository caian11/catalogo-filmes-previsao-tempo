@model IEnumerable<catalogo_filmes_previsao_tempo.Models.Filme>

@{
    ViewData["Title"] = "Catálogo local";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h4 mb-1">Catálogo local de filmes</h1>
        <p class="text-muted small mb-0">
            Filmes importados do TMDb e armazenados na base local.
        </p>
    </div>

    <a asp-controller="Movies"
       asp-action="Search"
       class="btn btn-primary btn-sm">
        Buscar novos filmes no TMDb
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info small" role="alert">
        Nenhum filme cadastrado na base local ainda.
        Use a busca no TMDb para importar filmes.
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var filme in Model)
        {
            var posterUrl = !string.IsNullOrEmpty(filme.PosterPath)
                ? "https://image.tmdb.org/t/p/w342" + filme.PosterPath
                : null;

            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <article class="card h-100 border-0 shadow-sm">
                    @if (!string.IsNullOrEmpty(posterUrl))
                    {
                        <img src="@posterUrl"
                             alt="@filme.Titulo"
                             class="card-img-top"
                             style="height: 240px; object-fit: cover;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h2 class="h6 card-title mb-1 text-truncate" title="@filme.Titulo">
                            @filme.Titulo
                        </h2>

                        @if (filme.DataLancamento.HasValue)
                        {
                            <p class="card-subtitle text-muted small mb-1">
                                @filme.DataLancamento.Value.ToString("dd/MM/yyyy")
                            </p>
                        }

                        @if (!string.IsNullOrWhiteSpace(filme.Genero))
                        {
                            <p class="small text-muted mb-2">
                                @filme.Genero
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(filme.CidadeReferencia))
                        {
                            <p class="small text-muted mb-2">
                                @filme.CidadeReferencia
                            </p>
                        }

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-2">
                                <!-- Detalhes -->
                                <a asp-controller="Filmes"
                                   asp-action="Details"
                                   asp-route-id="@filme.Id"
                                   class="btn btn-sm btn-outline-secondary"
                                   data-bs-toggle="tooltip"
                                   data-bs-placement="bottom"
                                   title="Ver detalhes">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <!-- Editar -->
                                <a asp-controller="Filmes"
                                   asp-action="Edit"
                                   asp-route-id="@filme.Id"
                                   class="btn btn-sm btn-outline-primary"
                                   data-bs-toggle="tooltip"
                                   data-bs-placement="bottom"
                                   title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>

                            <!-- Deletar com SweetAlert -->
                            <form asp-controller="Filmes"
                                  asp-action="Delete"
                                  asp-route-id="@filme.Id"
                                  method="post"
                                  class="delete-form mb-0">
                                @Html.AntiForgeryToken()
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger btn-delete"
                                        data-filme-nome="@filme.Titulo"
                                        data-bs-toggle="tooltip"
                                        data-bs-placement="bottom"
                                        title="Excluir">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </article>
            </div>
        }
    </div>
}

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteButtons = document.querySelectorAll('.btn-delete');

            deleteButtons.forEach(function (btn) {
                btn.addEventListener('click', function () {
                    const form = btn.closest('form');
                    const nomeFilme = btn.getAttribute('data-filme-nome') || 'o filme';

                    Swal.fire({
                        title: 'Confirmar exclusão?',
                        text: `Você está prestes a excluir "${nomeFilme}". Essa ação não poderá ser desfeita.`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Sim, excluir',
                        cancelButtonText: 'Cancelar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
}
