@model catalogo_filmes_previsao_tempo.Models.Filme

@{
    ViewData["Title"] = "Editar filme";
}

<div class="mb-3">
    <a asp-controller="Home"
       asp-action="Index"
       asp-route-id="@Model.Id"
       class="btn btn-link btn-sm">
        <i class="fas fa-arrow-left"></i> Voltar aos detalhes
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h1 class="h4 mb-3">Editar filme</h1>

        <form asp-controller="Filmes"
              asp-action="Edit"
              method="post">
            @Html.AntiForgeryToken()

            @* Id é obrigatório para o bind *@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TmdbId" />
            <input type="hidden" asp-for="PosterPath" />
            <input type="hidden" asp-for="DataCriacao" />

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TituloOriginal" class="form-label"></label>
                <input asp-for="TituloOriginal" class="form-control" />
                <span asp-validation-for="TituloOriginal" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sinopse" class="form-label"></label>
                <textarea asp-for="Sinopse" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Sinopse" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataLancamento" class="form-label"></label>
                <input asp-for="DataLancamento" class="form-control" type="date" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genero" class="form-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Lingua" class="form-label"></label>
                <input asp-for="Lingua" class="form-control" />
                <span asp-validation-for="Lingua" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duracao" class="form-label"></label>
                <input asp-for="Duracao" class="form-control" type="number" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NotaMedia" class="form-label"></label>
                <input asp-for="NotaMedia" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="NotaMedia" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ElencoPrincipal" class="form-label"></label>
                <textarea asp-for="ElencoPrincipal" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ElencoPrincipal" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CidadeReferencia" class="form-label"></label>
                <input asp-for="CidadeReferencia" class="form-control" />
                <span asp-validation-for="CidadeReferencia" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Latitude" class="form-label"></label>
                    <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Longitude" class="form-label"></label>
                    <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Salvar
            </button>
            <a asp-controller="Filmes"
               asp-action="Details"
               asp-route-id="@Model.Id"
               class="btn btn-secondary ms-2">
                Cancelar
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
