@model catalogo_filmes_previsao_tempo.Models.MovieDetailsWithWeatherViewModel

@{
    ViewData["Title"] = "Detalhes do filme";
    var posterUrl = !string.IsNullOrEmpty(Model.Filme.PosterPath)
        ? "https://image.tmdb.org/t/p/w342" + Model.Filme.PosterPath
        : null;
}   

<div class="mb-3">
    <a asp-controller="Home"
       asp-action="Index"
       class="btn btn-link btn-sm">
        <i class="fas fa-arrow-left"></i> Voltar ao cat√°logo
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="row g-0">
        @if (!string.IsNullOrEmpty(posterUrl))
        {
            <div class="col-md-4">
                <img src="@posterUrl"
                     alt="@Model.Filme.Titulo"
                     class="img-fluid rounded-start"
                     style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
        }

        <div class="col-md-8">
            <div class="card-body">
                <h1 class="h4 card-title mb-2">@Model.Filme.Titulo</h1>

                @* Campos do filme *@
                @if (!string.IsNullOrEmpty(Model.Filme.TituloOriginal))
                {
                    <p class="text-muted mb-1">
                        <small>T√≠tulo original: @Model.Filme.TituloOriginal</small>
                    </p>
                }

                @if (Model.Filme.DataLancamento.HasValue)
                {
                    <p class="text-muted mb-1">
                        <small>Lan√ßamento: @Model.Filme.DataLancamento.Value.ToString("dd/MM/yyyy")</small>
                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.Genero))
                {
                    <p class="text-muted mb-1">
                        <small>G√™nero: @Model.Filme.Genero</small>
                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.Lingua))
                {
                    <p class="text-muted mb-1">
                        <small>L√≠ngua original: @Model.Filme.Lingua</small>
                    </p>
                }

                @if (Model.Filme.Duracao.HasValue)
                {
                    <p class="text-muted mb-1">
                        <small>Dura√ß√£o: @Model.Filme.Duracao min</small>
                    </p>
                }

                @if (Model.Filme.NotaMedia.HasValue)
                {
                    <p class="text-muted mb-1">
                        <small>Nota m√©dia: @Model.Filme.NotaMedia</small>
                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.CidadeReferencia))
                {
                    <p class="text-muted mb-1">
                        <small>Cidade de refer√™ncia: @Model.Filme.CidadeReferencia</small>
                    </p>
                }

                @if (Model.Filme.Latitude.HasValue && Model.Filme.Longitude.HasValue)
                {
                    <p class="text-muted mb-1">
                        <small>Coordenadas: @Model.Filme.Latitude, @Model.Filme.Longitude</small>
                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.ElencoPrincipal))
                {
                    <p class="mt-3">
                        <strong>Elenco principal:</strong><br />
                        @Model.Filme.ElencoPrincipal
                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.Sinopse))
                {
                    <p class="mt-3">
                        <strong>Sinopse:</strong><br />
                        @Model.Filme.Sinopse
                    </p>
                }

                <hr />

                <h5>üå¶Ô∏è Previs√£o do Tempo</h5>

                @if (!string.IsNullOrEmpty(Model.WeatherError))
                {
                    <div class="alert alert-warning">
                        @Model.WeatherError
                    </div>
                }
                else if (Model.Weather != null)
                {
                    <div class="alert alert-info">
                        <p><strong>M√°xima:</strong> @Model.Weather.MaxTemperature¬∞C</p>
                        <p><strong>M√≠nima:</strong> @Model.Weather.MinTemperature¬∞C</p>
                        <p><strong>Data:</strong> @Model.Weather.Date</p>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhuma informa√ß√£o de clima dispon√≠vel.</p>
                }

                @* Bot√µes *@
                <div class="mt-3 d-flex gap-2">
                    <a asp-controller="Filmes"
                       asp-action="Edit"
                       asp-route-id="@Model.Filme.Id"
                       class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>

                    <form asp-controller="Filmes"
                          asp-action="Delete"
                          asp-route-id="@Model.Filme.Id"
                          method="post"
                          class="delete-form mb-0">
                        @Html.AntiForgeryToken()
                        <button type="button"
                                class="btn btn-danger btn-sm btn-delete"
                                data-filme-nome="@Model.Filme.Titulo">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.querySelector('.btn-delete');
            if (!btn) return;

            btn.addEventListener('click', function () {
                const form = btn.closest('form');
                const nomeFilme = btn.getAttribute('data-filme-nome') || 'o filme';

                Swal.fire({
                    title: 'Confirmar exclus√£o?',
                    text: `Voc√™ est√° prestes a excluir "${nomeFilme}". Essa a√ß√£o n√£o poder√° ser desfeita.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sim, excluir',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}
