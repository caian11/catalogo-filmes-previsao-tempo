@model catalogo_filmes_previsao_tempo.Models.MovieDetailsWithWeatherViewModel

@{
    ViewData["Title"] = "Detalhes do filme";
    var posterUrl = !string.IsNullOrEmpty(Model.Filme.PosterPath)
        ? "https://image.tmdb.org/t/p/w342" + Model.Filme.PosterPath
        : null;
}

<div class="mb-3">
    <a asp-controller="Home"
       asp-action="Index"
       class="btn btn-link btn-sm">
        <i class="fas fa-arrow-left"></i> Voltar ao catálogo
    </a>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="row g-0">

        @if (!string.IsNullOrEmpty(posterUrl))
        {
            <div class="col-md-4">
                <img src="@posterUrl"
                     alt="@Model.Filme.Titulo"
                     class="img-fluid rounded-start"
                     style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
        }

        <div class="col-md-8">
            <div class="card-body">
                <h1 class="h4 card-title mb-2">@Model.Filme.Titulo</h1>

                @* Campos do filme *@
                @if (!string.IsNullOrEmpty(Model.Filme.TituloOriginal))
                {
                    <p class="text-muted mb-1"><small>Título original: @Model.Filme.TituloOriginal</small></p>
                }

                @if (Model.Filme.DataLancamento.HasValue)
                {
                    <p class="text-muted mb-1">
                        <small>Lançamento: @Model.Filme.DataLancamento.Value.ToString("dd/MM/yyyy")</small>
                    </p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.Genero))
                {
                    <p class="text-muted mb-1"><small>Gênero: @Model.Filme.Genero</small></p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.Lingua))
                {
                    <p class="text-muted mb-1"><small>Língua original: @Model.Filme.Lingua</small></p>
                }

                @if (Model.Filme.Duracao.HasValue)
                {
                    <p class="text-muted mb-1"><small>Duração: @Model.Filme.Duracao min</small></p>
                }

                @if (Model.Filme.NotaMedia.HasValue)
                {
                    <p class="text-muted mb-1"><small>Nota média: @Model.Filme.NotaMedia</small></p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.CidadeReferencia))
                {
                    <p class="text-muted mb-1"><small>Cidade de referência: @Model.Filme.CidadeReferencia</small></p>
                }

                @if (Model.Filme.Latitude.HasValue && Model.Filme.Longitude.HasValue)
                {
                    <p class="text-muted mb-1"><small>Coordenadas: @Model.Filme.Latitude, @Model.Filme.Longitude</small></p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.ElencoPrincipal))
                {
                    <p class="mt-3"><strong>Elenco principal:</strong><br />@Model.Filme.ElencoPrincipal</p>
                }

                @if (!string.IsNullOrEmpty(Model.Filme.Sinopse))
                {
                    <p class="mt-3"><strong>Sinopse:</strong><br />@Model.Filme.Sinopse</p>
                }

                @* Botões *@
                <div class="mt-4 d-flex gap-2">
                    <a asp-controller="Filmes"
                       asp-action="Edit"
                       asp-route-id="@Model.Filme.Id"
                       class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>

                    <form asp-controller="Filmes"
                          asp-action="Delete"
                          asp-route-id="@Model.Filme.Id"
                          method="post"
                          class="delete-form mb-0">
                        @Html.AntiForgeryToken()
                        <button type="button"
                                class="btn btn-danger btn-sm btn-delete"
                                data-filme-nome="@Model.Filme.Titulo">
                            <i class="fas fa-trash-alt"></i> Excluir
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@* CARD SEPARADO PARA O CLIMA *@
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <h5 class="card-title">☁️ Clima da cidade do filme</h5>
        <hr />

        @if (!string.IsNullOrEmpty(Model.WeatherError))
        {
            <div class="alert alert-warning mb-0">
                @Model.WeatherError
            </div>
        }
        else if (Model.Weather != null)
        {
            <div class="row text-center">
                <div class="col-md-4">
                    <p><strong>Máxima:</strong><br />@Model.Weather.MaxTemperature°C</p>
                </div>
                <div class="col-md-4">
                    <p><strong>Mínima:</strong><br />@Model.Weather.MinTemperature°C</p>
                </div>
                <div class="col-md-4">
                    <p><strong>Data:</strong><br />@Model.Weather.Date</p>
                </div>
            </div>
        }
        else
        {
            <p class="text-muted m-0">Nenhuma informação climática disponível.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.querySelector('.btn-delete');
            if (!btn) return;

            btn.addEventListener('click', function () {
                const form = btn.closest('form');
                const nomeFilme = btn.getAttribute('data-filme-nome') || 'o filme';

                Swal.fire({
                    title: 'Confirmar exclusão?',
                    text: `Você está prestes a excluir "${nomeFilme}". Essa ação não poderá ser desfeita.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sim, excluir',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}
